{
  "name": "lulas",
  "version": "1.1.0",
  "description": "A life simulator",
  "main": "main.js",
  "directories": {
    "test": "test"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      ".bakup"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "start": "webpack-dev-server",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "build": "cd config; webpack --config ./webpack.config.js",
    "lint": "tslint -c tslint.json --type-check --project tsconfig.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amatiasq/lulas.git"
  },
  "author": "A. Mat√≠as Quezada <amatiasq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amatiasq/lulas/issues"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "coveralls": "^2.13.1",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.0",
    "tslint": "^5.4.3",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "homepage": "https://github.com/amatiasq/lulas#readme"
}
