{
  "name": "lulas",
  "version": "2.0.0",
  "description": "A life simulator",
  "directories": {
    "test": "test"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      ".bakup"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "start": "parcel --no-hmr -t browser demo/index.html",
    "build": "parcel build -t browser --public-url '.' demo/index.html",
    "compile": "tsc -d -p .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:perf": "node perf/run.js",
    "coverage:run": "jest --coverage",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -c tslint.json --project tsconfig.json 'src/**/*.ts'",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amatiasq/lulas.git"
  },
  "author": "A. Mat√≠as Quezada <amatiasq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amatiasq/lulas/issues"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/puppeteer": "^1.3.4",
    "chalk": "^2.4.1",
    "coveralls": "^3.0.1",
    "jest": "^23.1.0",
    "parcel-bundler": "^1.8.1",
    "puppeteer": "^1.5.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.9.1"
  },
  "homepage": "https://github.com/amatiasq/lulas#readme",
  "dependencies": {}
}
